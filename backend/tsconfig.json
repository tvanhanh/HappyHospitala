{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "types": ["node", "mongoose"],
    "ignoreDeprecations": "6.0"
  },
  "include": ["./**/*.ts", "./types/**/*"],
  "exclude": ["node_modules", "dist"]
}
